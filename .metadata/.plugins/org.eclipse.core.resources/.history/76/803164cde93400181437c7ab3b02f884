#ifndef JOGADOR_H_
#define JOGADOR_H_
#include <iostream>
#include <string>
using namespace std;

class Jogador {
private:
	string m_nome;
	int pontuacao = 0;
	int eliminado = 0; //1 - eliminado | 0 - continua no jogo
	int statusRodada = 0; //0 - parou | 1 - jogou
public:
	Jogador();
	virtual ~Jogador();
	const string& getNome() const;
	int getPontuacao() const;
	void setPontuacao(int pontuacao);
	friend istream& operator>>(istream &i, Jogador &j);

	int jogarDado();
	void pararNaRodada();

	int getEliminado() const {
		return eliminado;
	}

	void setEliminado(int eliminado = 0) {
		this->eliminado = eliminado;
	}

	int getStatusRodada() const {
		return statusRodada;
	}
};

#endif /* JOGADOR_H_ */
