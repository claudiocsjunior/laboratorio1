#ifndef FUNCIONARIO_H_
#define FUNCIONARIO_H_

#include <string>
#include <iostream>
using namespace std;

class Funcionario {

private:
	int m_id;
	string m_nome;
	double m_salario;
	string m_data;

public:
	Funcionario();
	virtual ~Funcionario();
	const string& getData() const;
	void setData(const string& data);
	int getId() const;
	const string& getNome() const;
	void setNome(const string& nome);
	double getSalario() const;
	void setSalario(double salario);
	static int totalFuncionarios;
	static int getTotalFuncionarios();
	friend istream& operator>>(istream &a, Funcionario &f);
	friend ostream& operator<<(ostream &e, Funcionario const f);
	bool operator==(Funcionario const &funcionarioComparacao);

};

#endif /* FUNCIONARIO_H_ */
