#ifndef EMPRESA_H_
#define EMPRESA_H_

#include "Funcionario.h"
#include <string>
#include <iostream>
using namespace std;

class Empresa {
private:
	int m_id;
	string m_nome;
	Funcionario m_funcionarios[40];
	string m_cnpj;
	int totalFuncionario = 0;

public:
	Empresa();
	virtual ~Empresa();
	const string& getCnpj() const;
	void setCnpj(const string& cnpj);
	int getId() const;
	const string& getNome() const;
	void setNome(const string& nome);
	friend istream& operator>>(istream &i, Empresa &e);
	void cadastrarFuncionario(Funcionario &funcionario);
	friend ostream& operator<<(ostream &o, Empresa const e);
	void listarFuncionarios();
	int getTotalFuncionario() const;
};

#endif /* EMPRESA_H_ */
