#ifndef JOGADOR_H_
#define JOGADOR_H_
#include <iostream>
#include <string>
using namespace std;

class Jogador {
private:
	string m_nome;
	int pontuacao = 0;
	int eliminado = 1; //0 - eliminado | 1 - continua no jogo
	int statusRodada = 0; //0 - parou | 1 - jogou
public:
	Jogador();
	virtual ~Jogador();
	const string& getNome() const;
	int getPontuacao() const;
	void setPontuacao(int pontuacao);
	friend istream& operator>>(istream &i, Jogador &j);
};

#endif /* JOGADOR_H_ */
